<div class="container">
  <h1>New Review for restaurant <%= restaurant.name %></h1>
  <%= simple_form_for [restaurant, review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary btn-block" %>
  <% end %>
  <br>
  <br>
  <%= link_to "back to restaurant detail", restaurant_path(restaurant)  %>
</div>
