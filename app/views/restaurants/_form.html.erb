<div class="container">
  <h1>New Restaurant</h1>
  <%= simple_form_for [restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.submit "add a restaurant", class: "btn btn-primary btn-block" %>
  <% end %>
  <br>
  <br>
  <%= link_to "back to main", restaurants_path  %>
</div>
